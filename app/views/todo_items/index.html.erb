<p id="notice"><%= notice %></p>


<h1>Todo List</h1>

<%= link_to 'Add a Todo', new_todo_item_path, class: "sub-todo" %>

  <div class="todo-list">
    <% @todo_items.each do |todo_item| %>
      <div class="todo-item">
        <span class="td-span-item"><%= todo_item.description %></span>
        <div class="td-bottom">
          <span class="td-span"><%= link_to 'Show', todo_item %></span>
          <span class="td-span"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></span>
          <span class="td-span"><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>

      </div>
    <% end %>
  </div>



<br>
